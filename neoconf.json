{
  "neodev": {
    "library": {
      "enabled": true
    }
  },
  "neoconf": {
    "plugins": {
      "lua_ls": {
        "enabled": true
      }
    }
  },
  "lspconfig": {
    "clangd": {
      "clangd.path": "~/.local/share/nvim/mason/bin/clangd",
      "clangd.arguments": [
        "--background-index",
        "--clang-tidy",
        "--header-insertion=iwyu",
        "--completion-style=detailed",
        "--function-arg-placeholders",
        "--fallback-style=google"
      ]
    }
  }
}
